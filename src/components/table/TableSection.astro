---
/**
 * Table section header - professional monochrome design
 * Creates visual separation between different specification groups
 */
interface Props {
  title: string;
  colspan?: number;
}

const { title, colspan = 4 } = Astro.props;
---

<tr>
  <th
    colspan={colspan}
    class="px-3 py-2 text-left text-[10px] font-bold uppercase tracking-wider border-b border-border/60 bg-muted/30 text-foreground"
  >
    {title}
  </th>
</tr>
