---
/**
 * Table section header with color-coded categories
 * Creates visual separation between different specification groups
 */
interface Props {
  title: string;
  color?: 'blue' | 'green' | 'orange' | 'purple' | 'red' | 'gray';
  colspan?: number;
}

const { title, color = 'blue', colspan = 4 } = Astro.props;

const colorClasses = {
  blue: 'bg-blue-50 dark:bg-blue-950/30 text-blue-900 dark:text-blue-100 border-blue-200 dark:border-blue-800',
  green: 'bg-green-50 dark:bg-green-950/30 text-green-900 dark:text-green-100 border-green-200 dark:border-green-800',
  orange: 'bg-orange-50 dark:bg-orange-950/30 text-orange-900 dark:text-orange-100 border-orange-200 dark:border-orange-800',
  purple: 'bg-purple-50 dark:bg-purple-950/30 text-purple-900 dark:text-purple-100 border-purple-200 dark:border-purple-800',
  red: 'bg-red-50 dark:bg-red-950/30 text-red-900 dark:text-red-100 border-red-200 dark:border-red-800',
  gray: 'bg-muted text-foreground border-border',
};

const colorClass = colorClasses[color];
---

<tr>
  <th
    colspan={colspan}
    class={`px-3 py-1.5 text-left text-[10px] font-bold uppercase tracking-wider border-b-2 ${colorClass}`}
  >
    {title}
  </th>
</tr>
