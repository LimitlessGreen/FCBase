{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fcbase.org/schema/transmitter.json",
  "title": "FCBase Transmitter Schema",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "kebabCaseId": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "imageEntry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "src": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "alt": { "type": "string" },
        "credit": { "type": "string" },
        "source_url": { "type": "string", "format": "uri" },
        "type": { "type": "string" },
        "width": { "type": "integer", "minimum": 1 },
        "height": { "type": "integer", "minimum": 1 }
      }
    },
    "compliance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "id", "url"],
      "properties": {
        "type": { "type": "string", "enum": ["fcc"] },
        "id": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "notes": { "type": "string" }
      }
    },
    "hardwareRevision": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name"],
      "properties": {
        "id": { "$ref": "#/definitions/kebabCaseId" },
        "name": { "type": "string" },
        "released": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "notes": { "type": "string" },
        "changes": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "sources": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "overrides": { "type": "object" }
      },
      "anyOf": [
        { "required": ["released"] },
        { "required": ["notes"] },
        { "required": ["changes"] }
      ]
    }
  },
  "required": [
    "id",
    "title",
    "brand",
    "support",
    "sources",
    "keywords",
    "verification"
  ],
  "properties": {
    "id": { "$ref": "#/definitions/kebabCaseId" },
    "title": { "type": "string", "minLength": 1 },
    "brand": { "type": "string", "minLength": 1 },
    "images": {
      "type": "array",
      "items": { "$ref": "#/definitions/imageEntry" }
    },
    "support": {
      "type": "object",
      "additionalProperties": false,
      "required": ["level", "since_version", "status"],
      "properties": {
        "level": {
          "type": "string",
          "enum": ["official", "manufacturer", "community"]
        },
        "since_version": { "type": "string", "minLength": 1 },
        "status": {
          "type": "string",
          "enum": ["supported", "limited", "sunset", "planned"]
        },
        "last_version": { "type": "string" },
        "notes": { "type": "string" }
      }
    },
    "hardware": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "form_factor": {
          "type": "string",
          "enum": ["handheld", "tray", "gamepad"]
        },
        "display": {
          "type": "string",
          "enum": ["color", "monochrome"]
        },
        "notes": { "type": "string" },
        "revisions": {
          "type": "array",
          "items": { "$ref": "#/definitions/hardwareRevision" }
        }
      }
    },
    "features": {
      "type": "array",
      "items": { "type": "string" }
    },
    "compliance": {
      "type": "array",
      "items": { "$ref": "#/definitions/compliance" }
    },
    "sources": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "verification": {
      "type": "object",
      "additionalProperties": false,
      "required": ["level", "last_updated"],
      "properties": {
        "level": {
          "type": "string",
          "enum": ["unverified", "community", "reviewed"]
        },
        "last_updated": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        }
      }
    },
    "notes": { "type": "string" }
  }
}
